{
  "name": "junit-xml-mocha-reporter",
  "version": "0.1.0",
  "description": "A JUnit XML reporter for mocha.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ./**/*.{js,jsx,ts,tsx}",
    "tests": "mocha test --reporter=spec",
    "lint:fix": "eslint --fix ./**/*.{js,jsx,ts,tsx}",
    "prettify": "prettier . --write",
    "prettier:check": "prettier . --check",
    "prepare": "husky install"
  },
  "author": "Migudevelop",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/migudevelop/junit-xml-mocha-reporter.git"
  },
  "homepage": "https://github.com/migudevelop/junit-xml-mocha-reporter.git",
  "engines": {
    "node": ">= 18.0.x"
  },
  "files": [
    "src/**/*",
    "index.js",
    "LICENSE",
    "package.json"
  ],
  "keywords": [
    "mocha",
    "junit",
    "cypress",
    "xml",
    "xunit",
    "e2e",
    "test",
    "tests",
    "javascript",
    "reporter"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@commitlint/cli": "19.5.0",
    "@commitlint/config-conventional": "19.5.0",
    "@migudevelop/types-utils": "1.3.0",
    "chai": "4.5.0",
    "chai-xml": "0.4.1",
    "eslint": "8.0.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-n": "15.0.0 || 16.0.0 ",
    "eslint-plugin-prettier": "5.1.3",
    "husky": "8.0.0",
    "lint-staged": "15.2.10",
    "mocha": "10.7.3",
    "prettier": "3.3.3"
  },
  "peerDependencies": {
    "mocha": ">=3.2.5"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "chalk": "4.1.2",
    "dotenv-flow": "4.1.0",
    "md5": "2.3.0",
    "xml": "1.0.1",
    "xml-sanitizer": "2.0.2"
  }
}
